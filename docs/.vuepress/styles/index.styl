// Dark theme
.resume-class
  color: #ffffff
  a.sidebar-link, .site-name
    color: #ffffff !important
  .sidebar, .navbar, .page, .links
    background-color: #292D3E !important
  h1, h2, h3, h4, h5, h6
    font-family: 'Hiragino Kaku Gothic Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  .subtitle
    margin-top: 0px
  h1.display
    font-size: 60px
    font-family: 'Josefin Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    font-weight: 600
    font-style: italic
  .content.default
    width: 36em
    margin: 0 auto
    max-width: 100%
    line-height: 1.5
  p
    font-size: 18px
  @media only screen and (max-width: 320px)
    p
      font-size: 16px
    .content.default
      width: 16em
  @media only screen and (max-width: 640px)
    p
      font-size: 17px
    .content.default
      width: 22em
